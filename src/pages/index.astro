---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Item from '../components/Item.astro';
import Player from '../components/Player.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Home">
	<main>
		<Navbar/>
		<div class="carousel">
			<Player video="video/vid-01.webm"/>
		</div>
		<div class="content">
			<div class="row">
				<Item img="img/shirt/WS-star-skull.jpg" price="$13"/>
				<Item img="img/shirt/PS-green-lego-top.jpg" price="$25"/>
				<Item img="img/shirt/PS-red-lego-top.jpg" price="$15"/>
				<Item img="img/shirt/RS-red-lego.jpg" price="$12"/>
			</div>
			<div class="row">
				<Item img="img/shirt/WS-blue-skull.JPEG" price="$23"/>
				<Item img="img/shirt/WS-flower-man.jpg" price="$15"/>
				<Item img="img/shirt/WS-red-doom.JPG" price="$12"/>
				<Item img="img/shirt/WS-red-doom.JPG" price="$27"/>
			</div>
			
		</div>
		<Footer/>
	</main>
</Layout>

<style>
	main{
		margin: 0;
		padding: 0;
	}

	.carousel{
		margin: 0;
		padding: 0;
		width: 100vw;
		height: 60vh;
		background-color: #ccc;
	}

	.content{
		background-image: url("img/bg.png");
		margin:0;
		padding: 0;
		width: 100vw;
		min-height: 40vh;

		/*TEMPORAL*/
		background-color: #eee;

	}

	.row{
		margin: 0;
		padding: 0;
		width: 100wv;
		height: 30vh;
		display: flex;
		
	}
	
</style>
