---
interface Props {
    video: string;
}

const { video } = Astro.props;
---

<video autoplay muted loop>
    <source src={video}>
    your browser is not compatible with video players
    <source/>
</video>

<style>
    video{
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
    }

    source{
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        align-self: center;
    }
</style>