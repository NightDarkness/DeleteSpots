---
interface Props {
    title: string;
	img: string;
	price: string;
}

const { title, img, price } = Astro.props;
---

<main class="item">
    <div class="item-image">
		<img src={img}/>
	</div>
    <div class="item-description">
        <div class="item-title">{title}</div>
        <div class="item-price">{price}</div>
    </div>
</main>
<style>
	.item{
		margin: auto;
		padding: 0;
		width: 20%;
		height: 90%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-self: center;

		border:1px solid black;
		border-radius: 7px;

		/*TEMPORAL*/
		background-color: #eee;
	}

	.item-image{
		margin: auto;
		padding: 0;
		width: 95%;
		height: 77%;
		justify-content: center;
		/*TEMPORAL8*/
		background-color: gray;

	}

	.item-image > img{
		margin: 0;
		padding: 0;
		width:100%;
		overflow: hidden;
		object-fit: cover;
	}

	.item-description{
		margin: 0;
		padding: 0;
		width: 100%;
		display: flex;
		flex-direction: column;
	}

	.item-title{
		margin: 0;
		padding: 0;
		width: 100%;
		height: 55%;
		text-align: center;

		font-family: "Poppins", sans-serif;
		font-weight: 500;
		font-style: normal;
	}

	.item-price{
		
	}
	
</style>
