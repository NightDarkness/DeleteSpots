---
interface Props {
	img: string;
	price: string;
}

const { img, price } = Astro.props;
---

<main class="item">
    <div class="item-image">
		<img src={img}/>
	</div>
    <div class="item-price">
        {price}
    </div>
</main>
<style>
	.item{
		margin: auto;
		padding: 0;
		width: 15vw;
		height: 15vw;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-self: center;

		box-shadow: -10px 10px 7px 0px #666;
		border-radius: 7px;

		/*TEMPORAL*/
		background-color: #eee;
	}

	.item:hover{
		cursor: pointer;
	}

	.item-image{
		margin: auto;
		padding: 0;
		width: 100%;
		height: 100%;
		justify-content: center;
		overflow: hidden;
		border-radius: 7px;
		/*TEMPORAL8*/
		background-color: gray;

	}

	.item-image > img{
		margin: 0;
		padding: 0;
		width:100%;
		height: 100%;
		overflow: hidden;
		object-fit: cover;
	}

	.item-price{
		width: 15vw;
		height: 15vw;
		display: flex;
		flex-direction: column;
		justify-content: flex-end;
		text-align: left;
		text-indent: 5px;
		position: absolute;
		opacity: 0;
		color: #eee;
		font-family: "Rubik Mono One", monospace;
		font-weight: 400;
		font-style: normal;
		
	}

	.item:hover{
		.item-price{
			opacity: 1;
		}
	}

	
	
</style>
